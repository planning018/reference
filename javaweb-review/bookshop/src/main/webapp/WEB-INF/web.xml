<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
          http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <servlet>
        <servlet-name>FindAllBook</servlet-name>
        <servlet-class>com.bookshop.servlet.FindAllBook</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddBookServlet</servlet-name>
        <servlet-class>com.bookshop.servlet.AddBookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PreUpdateBookServlet</servlet-name>
        <servlet-class>com.bookshop.servlet.PreUpdateBookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateBookServlet</servlet-name>
        <servlet-class>com.bookshop.servlet.UpdateBookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteBookServlet</servlet-name>
        <servlet-class>com.bookshop.servlet.DeleteBookServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>FindAllBook</servlet-name>
        <url-pattern>/findAllBook</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddBookServlet</servlet-name>
        <url-pattern>/addBookServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PreUpdateBookServlet</servlet-name>
        <url-pattern>/preUpdateBookServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateBookServlet</servlet-name>
        <url-pattern>/updateBookServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteBookServlet</servlet-name>
        <url-pattern>/deleteBookServlet</url-pattern>
    </servlet-mapping>

</web-app>
